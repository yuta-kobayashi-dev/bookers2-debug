<!--検索対象モデルがUserの時-->
<% if @range == "User" %>
  <h2> Users search for ""</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%=  image_tag user.get_profile_image, size:"100x100" %></td>
          <td> <%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
<% else %>
  <!--検索対象モデルがBookの時-->
  <h2>Books search for "search.word"</h2>
  <table class="table">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%=  image_tag book.user.get_profile_image, size:"50x50" %></td>
          <td><%= link_to book.title,book_path(book.id)  %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>